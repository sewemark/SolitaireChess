<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:id="@+id/popup"
    android:background="@color/backgroundcolorCompleentaryBrighter"
    android:orientation="vertical">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_horizontal"
        android:orientation="horizontal">
        <Button
            android:id="@+id/menuButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/menu_icon_24dp"
            android:text="@string/menu"/>
        </LinearLayout>
    <GridView
        android:id="@+id/gridview"
        android:tag="gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:stretchMode="columnWidth"
        />
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
    <Button
    android:id="@+id/undoButton"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:background="@drawable/icon_undo"
    />
    <Button
        android:id="@+id/hintButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/hint_icon"
        />
    <Button
        android:id="@+id/resetButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/refresh_icon"
      />

    <Button
        android:id="@+id/previousButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/back_icon" />
        <Button
            android:id="@+id/nextBoardButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/next_icon" />
        <Button
            android:id="@+id/selectChallengButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_select" />
</LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/puzzle_hardness"
            />

        <TextView
            android:id="@+id/puzzleHardnessLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            />
    </LinearLayout>
</LinearLayout>
